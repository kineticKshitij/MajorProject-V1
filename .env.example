# Django Settings
DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production

# Database (SQLite - Default)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Database (PostgreSQL - Uncomment for PostgreSQL)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=googledorks
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=db
# DB_PORT=5432

# Email Configuration (Gmail SMTP)
# To enable real email sending:
# 1. Set DEBUG=False below
# 2. Use your Gmail address
# 3. Generate App Password from Google Account settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your.email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password
DEFAULT_FROM_EMAIL=your.email@gmail.com

# Security (Production)
# DEBUG=False
# DJANGO_SECRET_KEY=your-very-secure-secret-key-here
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com